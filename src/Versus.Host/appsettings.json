{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Warning",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [
            "FromLogContext"
        ]
    },
    "ConnectionStrings": {
        "Default": "Host=localhost;Database=versus;Username=postgres;Password=postgres"
    },
    "Authentication": {
        "Schemes": {
            "KeyCloak": {
                "MetadataAddress": "http://localhost/realms/versus/.well-known/openid-configuration",
                "Authority": "http://localhost/realms/versus",
                "Audience": "versus-api"
            }
        }
    },
    "AllowedHosts": "*"
}
